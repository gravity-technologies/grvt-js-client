{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "types",
    "interfaces/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
